# Production Environment Variables for Railway/Render

# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=production

# Database Configuration
# Option 1: Use DATABASE_URL (Railway/Render provides this)
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual connection parameters
DATABASE_CLIENT=postgres
DATABASE_HOST=your-db-host
DATABASE_PORT=5432
DATABASE_NAME=bureau_wonders_cms
DATABASE_USERNAME=your-db-user
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=false

# Secrets (Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
APP_KEYS=generate-random-string-here
API_TOKEN_SALT=generate-random-string-here
ADMIN_JWT_SECRET=generate-random-string-here
TRANSFER_TOKEN_SALT=generate-random-string-here
JWT_SECRET=generate-random-string-here
ENCRYPTION_KEY=generate-random-string-here

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_SECURE=false
SMTP_DEFAULT_FROM=noreply@bureauofwonders.com
SMTP_DEFAULT_REPLY_TO=info@bureauofwonders.com

# Contact Form Configuration
CONTACT_FORM_RECIPIENT=contact@bureauofwonders.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-site.vercel.app

# Note: Set these in Railway/Render environment variables, not in a committed file
