{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member",
    "description": "Team member profiles for brand story and about page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "expertise": {
      "type": "json",
      "required": false
    },
    "bio": {
      "type": "richtext",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "order": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false
    }
  }
}