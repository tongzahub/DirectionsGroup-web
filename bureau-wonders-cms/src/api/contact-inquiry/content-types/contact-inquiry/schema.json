{
  "kind": "collectionType",
  "collectionName": "contact_inquiries",
  "info": {
    "singularName": "contact-inquiry",
    "pluralName": "contact-inquiries",
    "displayName": "Contact Inquiry",
    "description": "Contact form submissions from website visitors"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "company": {
      "type": "string",
      "required": false
    },
    "email": {
      "type": "email",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["New", "Read", "Responded"],
      "default": "New",
      "required": true
    },
    "submittedAt": {
      "type": "datetime",
      "default": null
    }
  }
}
